#----Dictionaries----#
shop_list = {}

#----Functions----#
def add_item():
    leave = False
    while leave == False:
        key = input("What would you like to add? Type 'exit' to leave. > ").lower()
        if key == 'exit':
            leave = True
        elif key != 'exit':
            value = input("What is the price? > ")
            print("Adding", key, "at the price of", value, "dollars.")
            shop_list[key] = value

#----Main Code----#
again = 'y'
while again == 'y':
    print("Welcome to your shopping list!")
    print("Would you like to add, remove, browse, or quit?")
    edit = input("> ").lower()
    if edit == 'add':
        add_item()
    elif edit == 'remove':
        leave = False
        while leave == False:
            key = input("What would you like to remove? Type 'exit' to leave. > ").lower()
            if key == 'exit':
                leave = True
            elif key != 'exit':
                if key in shop_list:
                    print("Removing", key)
                    del shop_list[key]
                else:
                    print("This item was already not on your list.")
                
